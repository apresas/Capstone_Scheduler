<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/container_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_view_assessmentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:layout_alignParentEnd="true"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/text_view_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/text_view_assessmentID"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Assessment Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <RelativeLayout
                android:id="@+id/termIDLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_course_title"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                >

                <LinearLayout
                    android:id="@+id/courseIDLayoutContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_termID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Course ID:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <TextView
                        android:id="@+id/edit_termID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/text_view_termID"
                        android:text="#"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/start_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/termIDLayout"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                >

                <TextView
                    android:id="@+id/text_view_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Start:" />

                <TextView
                    android:id="@+id/edit_assessment_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/text_view_start"
                    android:text="Start" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/end_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/start_layout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="60dp"
                >

                <TextView
                    android:id="@+id/text_view_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:text="End:" />

                <TextView
                    android:id="@+id/edit_assessment_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/text_view_end"
                    android:text="End">

                </TextView>
            </RelativeLayout>

            <Button
                android:id="@+id/add_course_btn"
                android:layout_width="50dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@color/ESC_Main"
                android:src="@drawable/ic_add"
                android:text="+"
                android:textSize="25dp"
                tools:ignore="SpeakableTextPresentCheck">

            </Button>
        </RelativeLayout>



</RelativeLayout>

</androidx.cardview.widget.CardView>